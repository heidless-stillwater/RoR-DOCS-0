
<div class="container col-6">
  <%= form_with(model: image) do |form| %>
    <% if image.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(image.errors.count, "error") %> prohibited this image from being saved:</h2>

        <ul>
          <% image.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <form>
      <div class="form-group">
        <%= form.label :name, style: "display: block", class: "flabel" %>
        <%= form.text_field :name, class:"form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= form.label :picture, style: "display: block", class: "flabel" %>
        <%= form.text_field :picture, class:"form-control" %>
      </div>

      <div class="form-group mt-3">
        <%= form.label :user_id, style: "display: block", class: "flabel" %>
        <%= form.text_field :user_id, class:"form-control" %>
      </div>

      <button type="submit" class="btn btn-primary mt-3">Create Image</button>
    </form>
  <% end %>
</div>